@page
@model LoginModel

@{
    ViewData["Title"] = "Grand Circus Library";
}


<div class="row">
    <div class="col-6">
        <section>
            <h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h4>Please login to use the Library Search Terminal.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group" style="width: 50%">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 50%">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-6 justify-content-end my-auto">
        <img src="https://cceit.ou.edu/wp-content/uploads/2016/03/library-logo-clipart-1.png"/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
