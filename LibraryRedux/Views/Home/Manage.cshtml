
@{
    ViewData["Title"] = "Administrator View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    LibraryDBContext db = new LibraryDBContext();
    List<Book> libraryList = db.Book.ToList<Book>();
    List<AspNetUsers> userList = db.AspNetUsers.ToList<AspNetUsers>();
}

@model AspNetUsers

<div class="text-center">
    <h2>Manage User</h2>
    <form asp-action="userManage" asp-controller="Home">
        <select id="user" name="user">
            <option value=""></option>
            @foreach (AspNetUsers user in userList)
            {
                <option value="@user.UserName">@user.UserName</option>
            }
        </select>
        <button type="submit">Display User</button>
    </form>
</div>

<p id="userName">
    @if(Model != null)
    {
    <table align="center" style="text-align: center">
        <tr>
            <th>User</th><th>Email</th><th>Action</th>
        </tr>
        <tr>
            <td>@Model.UserName</td><td>@Model.Email</td><td><button type="button">Suspend</button></td>
        </tr>

    </table>
    }
</p>


<div class="text-center">
    <h2>View Current Library</h2>
    <form asp-action="bookManage" asp-controller="Home">
        <select value="book">
            <option value=""></option>
            @foreach (Book book in libraryList)
            {
                <option value="@book.Title">@book.Title</option>
            }
        </select>
        <button type="submit">Manage Book Entry</button>
    </form>
    <form asp-action="addBook" asp-controller="Home">
        <button type="submit">Add New Book</button>
    </form>
</div>

